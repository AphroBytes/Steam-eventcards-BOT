{
  "env": {
    "es2021": true,
    "node": true
  },
  "extends": [
      "airbnb-base", 
      "prettier", 
      "plugin:node/recommended"
  ],
  "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
  },
  "plugins": ["prettier"],
  "rules": {
      "prettier/prettier": "error",
      "no-await-in-loop": "off",
      "no-console": "off",
      "node/no-unpublished-import": "off",
      "import/extensions": [
        "error",
        "ignorePackages"
      ]
  }
}